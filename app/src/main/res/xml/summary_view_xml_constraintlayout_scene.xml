<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/imageView2"
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom" />
    </Transition>
    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/videoConstrain"
            motion:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toTopOf="@+id/constraintLayout"
            motion:layout_constraintStart_toStartOf="@+id/constraintLayout"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="550dp" />
        <Constraint
            android:id="@+id/imageView2"
            motion:layout_constraintEnd_toEndOf="@id/videoConstrain"
            android:layout_width="150dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/videoConstrain"
            motion:layout_constraintTop_toTopOf="@id/videoConstrain"
            motion:layout_constraintStart_toStartOf="@id/videoConstrain" />
        <Constraint
            android:id="@+id/animeTitle"
            motion:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="0"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toBottomOf="@id/videoConstrain"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="@+id/constraintLayout"
            android:layout_marginTop="50dp" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/background">
        <Constraint
            android:id="@+id/constraintLayout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/animePic"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:alpha="1"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/firstShimmerRelative"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"
            android:visibility="gone" />
        <Constraint
            android:id="@+id/titleName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@+id/firstShimmerRelative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/animePic"
            android:layout_marginStart="30dp"
            motion:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/firstShimmerRelative"
            android:layout_marginStart="16dp"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp" />
        <Constraint
            android:id="@+id/thirdShimmerRelative"
            android:layout_width="1dp"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@id/dropDown"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/summary"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/dropDown"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@+id/thirdShimmerRelative"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

    </ConstraintSet>
</MotionScene>