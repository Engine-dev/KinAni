<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="summary_view"
    tools:context=".view.SummaryView"
    android:paddingBottom="25dp">


    <ImageView
        android:id="@+id/animePic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/firstShimmerRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        >

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_animePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shimmer_direction="left_to_right"
        >
        <ImageView
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:background="@drawable/skeleton"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ImageView
        android:id="@+id/animePic2"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:visibility="gone"
        tools:src="@tools:sample/avatars"
        android:scaleType="centerCrop"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/titleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="20sp"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/firstShimmerRelative"
        app:layout_constraintTop_toBottomOf="@+id/animePic" />

<!--    <Button-->
<!--        android:id="@+id/likeButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:layout_marginEnd="67dp"-->
<!--        android:text="Add to Likes"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintHorizontal_bias="1.0"-->
<!--        app:layout_constraintStart_toEndOf="@id/animePic2"-->
<!--        app:layout_constraintTop_toBottomOf="@id/titleName" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/round_layout"
        app:layout_constraintTop_toBottomOf="@id/titleName"
        app:layout_constraintStart_toEndOf="@id/firstShimmerRelative"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/likeButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_thumb_up_24"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="30dp"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/dislikeButton"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_thumb_down_off_alt_24"/>
    </LinearLayout>

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:text="@string/summary"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstShimmerRelative" />

    <RelativeLayout
        android:id="@+id/thirdShimmerRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/summary"
        app:layout_constraintBottom_toTopOf="@id/dropDown"
        >
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_direction="left_to_right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/skeleton"
            />
    </com.facebook.shimmer.ShimmerFrameLayout>
        <TextView
                android:id="@+id/summaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:visibility="gone"
                />
    </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropDown"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirdShimmerRelative">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Episode: 0"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>



</androidx.constraintlayout.widget.ConstraintLayout>